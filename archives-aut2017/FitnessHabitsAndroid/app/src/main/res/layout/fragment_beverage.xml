<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="170.25dp"
    android:background="@color/colorPrimary"
    tools:context="com.strudelauxpommes.fitnesshabits.beverage.BeverageFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/layout_bevSumHeader"
        android:layout_width="match_parent"
        android:layout_height="40.25dp"
        android:clickable="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_bevSummaryTitle"
            android:layout_width="100dp"
            android:layout_height="40.25dp"
            android:text="Beverage"
            android:textColor="@android:color/white"/>

        <ImageView
            android:id="@+id/img_bevTitle"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_bevSummaryTitle"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/txt_bevTotal"
            android:layout_width="40dp"
            android:layout_height="40.25dp"
            android:layout_toRightOf="@id/img_bevTitle" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_bevSummaryFav1"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_above="@+id/btn_bevSummaryFav2"
        android:layout_alignParentLeft="true"
        android:text="Beverage"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_bevSummaryFav2"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_above="@+id/btn_bevSummaryFav3"
        android:layout_alignParentLeft="true"
        android:text="Beverage"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_bevSummaryFav3"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_above="@+id/btn_bevSummaryOthers"
        android:layout_alignParentLeft="true"
        android:text="Beverage"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_bevSummaryOthers"
        android:layout_width="180dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Beverage"
        android:textColor="@android:color/white" />




</RelativeLayout>
